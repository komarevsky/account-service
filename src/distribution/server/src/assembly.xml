<assembly>
    <id>bin</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>src</directory>
            <outputDirectory>as-server</outputDirectory>
            <excludes>
                <exclude>assembly.xml</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
